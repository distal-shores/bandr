<p id="notice"><%= notice %></p>

<h1>Listing Demo Links</h1>

<table>
  <thead>
    <tr>
      <th>Url</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @demo_links.each do |demo_link| %>
      <tr>
        <td><%= demo_link.url %></td>
        <td><%= demo_link.description %></td>
        <td><%= link_to 'Show', demo_link %></td>
        <td><%= link_to 'Edit', edit_demo_link_path(demo_link) %></td>
        <td><%= link_to 'Destroy', demo_link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Demo link', new_demo_link_path %>
