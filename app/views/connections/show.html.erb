<h2>Connections</h2>
<ul>
  <% for connection in @user.connections %>
    <li>
      <%= connections.connection.first_name %>
      (<%= link_to "remove", connection, :method => :delete %>)
    </li>
  <% end %>
</ul>

<p><%= link_to "Find Connections", users_path %></p>

<h2>Connected by Users</h2>
<ul>
  <% for user in @user.inverse_connections %>
    <li><%=h user.first_name %></li>
  <% end %>
</ul>