  //   $(document).ready(function() {
  //   $('#msg-menu').sidr({side: 'left'});
  // });

$(document).ready(function() {
    $('#other-menu').sidr({
      name: 'msg_sidr',
      side: 'left'
    });
    $('#simple-menu').sidr({
      name: 'sidr',
      side: 'right'
    });
});

    
  </script>

</body>
</html>
