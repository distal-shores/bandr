<p id="notice"><%= notice %></p>

<h1>User List</h1>

<div id="users">
<% for user in @users %>
  <div class="user">
    <p>
      <strong><%= user.first_name %></strong>
      <%= link_to "Add Friend", connections_path(friend_id: user), method: :post %>
      <div class="clear"></div>
    </p>
  </div>
<% end %>
</div>