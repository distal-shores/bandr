<% img_url = @user.pic %>

<img src="/assets/user_splash.jpeg" class="bgimg" />

<div id="flex-container">

  <div class="columns" id="user-container">

    <div class="column is-3 is-offset-2" id="user-left-pane">

    <%= image_tag(img_url, class: 'profile-pic') %>
    <h1 class="user-header">
      <%= @user.full_name %>
    <h2 class="user-city">
      <%= @user.city %>
    </h2>
    <h2 class="user-city">
      <% instrument = @user.interests.where(kind: 'instrument').first.try(:name) %>
      <%= instrument.capitalize.pluralize %>
    </h2>
    </h1>
    <%= image_tag(@user.assign_icons, class: 'instr-icon') %>

    </div>

    <div class="column is-5" id="user-right-pane">
    <h1 class="user-header-2">
      About <%= @user.first_name %>
    </h1>
  
      <p class="user-description">
        <%= @user.description %>
      </p>
    
       <div id="genres">
    <% genre = @user.interests.where(kind: 'genre').first.try(:name) %>
     <% subgenre = @user.interests.where(kind: 'subgenre').first.try(:name) %>
     <%= genre.capitalize %> | <%= subgenre.capitalize %>
    </div>

    </div>

  </div>

</div>
<% demo_string = @user.demo%>

<script type='text/javascript'>
  $(window).load(function(){
    var demo = '<%= demo_string %>'
    $(document).ready(function(){
      $('body').stratus({
        auto_play: false,
        download: false,
        links: demo,
        random: false,
        buying: false,
        user: false,
        stats: false,
      });
    });
  }); 
</script>